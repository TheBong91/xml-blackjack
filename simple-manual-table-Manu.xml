    <defs>
        <g id="spot-ring">
            <circle r="1.3" stroke="black" stroke-width="0.12" fill="rgb(0,100,0)" />
        </g>
    </defs>
    
    <defs>
        <g id="spot-cards">
            <rect width="1" height="1.6" stroke="black" stroke-width="0.12" fill="rgb(0,100,0)" />
        </g>
    </defs>
    
    <defs>
        <g id="insurance-box">
            <rect width="17" height="3" fill="rgb(20,100,20)" stroke="black" stroke-width="0.12" />
        </g>
    </defs>
    
    <defs>
        <g id="insurance-bet-box">
            <circle r="0.5" fill="white" stroke="black" stroke-width="0.12"></circle>
        </g>
    </defs>

    <defs>
