            <use xlink:href="#insurance-bet-box" x="3.8" y="-1.2" />
            <use xlink:href="#insurance-bet-box" x="6.8" y="0.4" />
            <use xlink:href="#insurance-bet-box" x="11.5" y="0.4" />
            <use xlink:href="#insurance-bet-box" x="16.2" y="0.4" />
            <use xlink:href="#insurance-bet-box" x="19.2" y="-1.2" />
        </g>
    </defs>
    
    <use xlink:href="#insurance-field" x="5.5" y="8" />

    <use xlink:href="#spot-ring" x="7" y="7" />
    <use xlink:href="#spot-cards" x="6.3" y="7" transform="rotate(50,6.3,7)" />
    
