<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE svg PUBLIC "-//W3C//DTD SVG 1.1//EN" "http://www.w3.org/Graphics/SVG/1.1/DTD/svg11.dtd">
<svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 36 24">

    <g alignment-baseline="baseline" />
    
    <clipPath id="bot">
        <path d="M 0 4 h 36 v 10 h -36 z" />
    </clipPath>
    
    <circle cx="17" cy="-2" r="16" fill="rgb(0,100,0)" clip-path="url(#bot)" />
    

    <image id="BJ-logo"
